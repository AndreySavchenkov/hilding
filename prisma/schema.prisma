generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Пример модели
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderOptions {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  lineOptions  String
  areaOptions  String
  workerNumber String
  pallets      Boolean
  scotchTape   Boolean
  whiteBraid   Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
